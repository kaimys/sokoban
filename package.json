{
  "name": "Sokoban",
  "version": "0.0.1",
  "scripts": {
    "jshint": "jshint lib/*.js",
    "jscs": "jscs lib/*.js",
    "lint": "npm run jshint && npm run jscs",
    "test": "mocha test/**/*-test.js",
    "build": "browserify ./lib/sokoban.js -o ./public/sokoban-app.js",
    "clean": "rm ./public/sokoban-app.js",
    "watch": "watchify ./lib/sokoban.js -o ./public/sokoban-app.js"
  },
  "devDependencies": {
    "async": "^0.9.0",
    "browserify": "^6.3.2",
    "jscs": "^1.9.0",
    "jshint": "^2.5.11",
    "mocha": "^2.0.1",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.6.0",
    "uglify-js": "^2.4.16",
    "watchify": "^2.1.1"
  },
  "dependencies": {
    "three": "^0.70.0"
  }
}
